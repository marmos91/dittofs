# =============================================================================
# DittoFS Benchmark Suite - Environment Configuration
# =============================================================================
# Copy this file to .env and modify as needed:
#   cp .env.example .env
#
# These defaults work out of the box with LocalStack and Docker Compose.
# =============================================================================

# -----------------------------------------------------------------------------
# 1. S3 Configuration (LocalStack)
# -----------------------------------------------------------------------------
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=bench

# -----------------------------------------------------------------------------
# 2. PostgreSQL Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=bench
POSTGRES_PASSWORD=bench
POSTGRES_DB=bench
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# 3. DittoFS Configuration
# -----------------------------------------------------------------------------
DITTOFS_CONTROLPLANE_SECRET=BenchmarkInfrastructureSecret32ch!
BENCH_WAL_ENABLED=true

# -----------------------------------------------------------------------------
# 4. Resource Limits
# -----------------------------------------------------------------------------
BENCH_CPU_LIMIT=2
BENCH_MEM_LIMIT=4g
# BENCH_CACHE_SIZE: with suffix, used by RClone (e.g. 256M)
BENCH_CACHE_SIZE=256M
# BENCH_CACHE_SIZE_MB: numeric only (megabytes), used by JuiceFS
BENCH_CACHE_SIZE_MB=256

# -----------------------------------------------------------------------------
# 5. Benchmark Parameters
# -----------------------------------------------------------------------------
BENCH_THREADS=4
BENCH_ITERATIONS=3
BENCH_RUNTIME=60

# -----------------------------------------------------------------------------
# 6. Platform Configuration
# -----------------------------------------------------------------------------
# FIO I/O engine: auto-detected by scripts if not set.
# Linux: libaio, macOS: posixaio
# FIO_ENGINE=libaio

# -----------------------------------------------------------------------------
# 7. Volume Configuration
# -----------------------------------------------------------------------------
# Use tmpfs for metadata/cache storage (reduces disk I/O noise).
# Uncomment to enable:
# BENCH_TMPFS=true
